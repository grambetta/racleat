
<div class="margin-constraint">
  <div class="search-bar">
<!--   Mettre dans cette div la searchbar
-->
  </div>
  <div class="devices-and-map row">
    <div class="devices col-8">
      <h1>Les appareils à louer</h1>
      <ul class="articles">
        <% @devices.each do |device| %>
        <li> <%= link_to device_path(device) do %>
          <div class="card-product">
            <%= cl_image_tag device.photos.first.key %>
            <div class="card-product-infos">
              <%= device.name %>
              <p> <strong> <%= device.capacity %> </strong> personnes </p>
              <p> <%= device.brand %> </p>
              <p> <%= device.device_type %> </p>
              <p> <%= device.price %>€ </p>
            </div>
          </div>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
    <div class="map col-4">
      <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      <!-- style="width: 40vw; height: 100vh;" -->
    </div>
    </div>
  </div>
</div>


